<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_github_user_list"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        >
        <ImageView
            android:id="@+id/iv_github_profile"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:src="@drawable/user2"
            android:contentDescription="@string/profile_picture"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_github_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name_template"
                    android:theme="@style/TextAppearance.AppCompat.Headline"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_template"
                    android:id="@+id/tv_github_username"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextAppearance.AppCompat.Caption"
                    android:text="@string/follower_count_template"/>
                <TextView
                    android:id="@+id/tv_github_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:theme="@style/TextAppearance.AppCompat.Caption"
                    android:text="@string/followers_with_coma"
                    />
                <TextView
                    android:id="@+id/tv_github_repo_count"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_template"
                    android:theme="@style/TextAppearance.AppCompat.Caption"
                    />
                <TextView
                    android:layout_marginStart="2sp"
                    android:theme="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repositories"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>