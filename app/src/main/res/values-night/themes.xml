<resources >
    <!-- Base application theme. -->
    <style name="Theme.AplikasiGithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate_200</item>
        <item name="colorPrimaryVariant">@color/sky_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/leaf_200</item>
        <item name="colorSecondaryVariant">@color/leaf_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/JetBrainsMonoFontStyle</item>
    </style>
    <style name="JetBrainsMonoFontStyle.Count" parent="JetBrainsMonoFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
    </style>
</resources>